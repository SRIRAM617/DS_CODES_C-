#include<iostream>
using namespace std;
class Array
{
    int *A;
    int sizee;
    int length;
public:
    Array(int sizee)
    {
        this->sizee=sizee;
          A=new int [sizee];
    }
    void create()
    {
        cout<<"Enter the length of the array"<<endl;
        cin>>length;
        cout<<"Enter array elements"<<endl;
        for(int i=0;i<length;i++)
        {

            cin>>A[i];
        }
    }
    void display()
    {
        cout<<"The elements are"<<endl;
        for(int i=0;i<length;i++)
        {

            cout<<A[i]<<endl;
        }
    }
    void add(int element)
    {
        if(length<sizee)
        {


        A[length]=element;
        length++;
        cout<<"Added"<<endl;
        }
        else
            cout<<"Array is full";
    }
    //After add we are displaying below.
    void array_display()
    {
        cout<<"The elements are"<<endl;
        for(int i=0;i<length;i++)
        {

            cout<<A[i]<<endl;
        }
    }
    void insert_element(int A[],int index,int element)
    {
        if(length<sizee)
        {
            for(int i=length-1;i>index;i--)
            {
                A[i]=A[i-1];
            }
            A[index]=element;
            length++;
        }
    }




};
int main()
{
    Array arr(10);
    arr.create();
    arr.display();
    arr.add(6);
    arr.array_display();
    arr.insert_element(arr,3,5);
}
